          <li {% if 'solicitudesfichasocial' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('solicitudesfichasocial') }}">Solicitudes</a></li>
          <li {% if 'rutas' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('rutas') }}">Rutas</a></li>
          <li {% if 'personas' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('personas') }}">Personas</a></li>
          {#<li {% if 'estadossolicitudfichasocial' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('estadossolicitudfichasocial') }}">Estados de Solicitud</a></li>#}
          {#<li {% if 'tipossolicitudfichasocial' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('tipossolicitudfichasocial') }}">Tipos de Solicitud</a></li>#}
          <li {% if 'encuestadores' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('encuestadores') }}">Encuestadores</a></li>
          <li {% if 'archivos' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('archivos') }}">Archivos</a></li>
          <li {% if 'usuarios' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('usuarios') }}">Usuarios</a></li>
          {#<li {% if 'estadosruta' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('estadosruta') }}">Estados de Ruta</a></li>#}
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="{{ path('perfil') }}">Perfil</a></li>
          <li><a href="{{ path('fos_user_security_logout') }}">Salir</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
  </header>

{% endblock %}

{% block header %}
  <div class="page-header-main"></div>
{% endblock %}

{% block main %}
  <div class="container">
    <div class="row">
      {% block sidebar %}
        <div class="col-md-12">
          {% block body %}{% endblock %}
        </div>
        {% block actionbar %}{% endblock %}
      {% endblock %}
    </div>
  </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block javascript %}
  <script src="{{ asset('js/jquery.js') }}"></script>
  <script src="{{ asset('js/jquery-ui-1.11.2/jquery-ui.js') }}"></script>
  <script src="{{ asset('js/bootstrap.js') }}"></script>
  <script src="{{ asset('js/jquery.Rut.js') }}"></script>
  <script src="{{ asset('js/autocompleter.js') }}"></script>
  <script src="{{ asset('js/main.js') }}"></script>
  {% block javascriptExtra %}{% endblock %}
{% endblock %}

