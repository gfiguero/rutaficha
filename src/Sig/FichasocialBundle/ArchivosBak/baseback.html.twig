<!DOCTYPE html>
<html lang="en">
    <head>

        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>
            {% block title %}
              Ficha Social
            {% endblock %}
        </title>

        {% block iexplorer %}
            <!--[if lt IE 9]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->
            <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
            {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
        {% endblock %}

        {% block stylesheet %}
          <link href="{{ asset('css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
          <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    </head>

    <body>

        {% block navigation %}
          <header class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{#{ path('root') }#}">Ficha Social</a>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav">
                  {# <li {% if app.request.attributes.get('_route') starts with 'home' %}class="active"{% endif %} ><a href="../home">Inicio</a></li> #}
                  <li {% if 'calles' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('calles') }}">Calles</a></li>
                  {#<li {% if 'propiedades' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('propiedades') }}">Propiedades</a></li>#}
                  {#<li {% if 'personas' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('personas') }}">Personas</a></li>#}
                  {#<li {% if 'solicitudes' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('solicitudes') }}">Solicitudes</a></li>#}
                  {#<li {% if 'rutas' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('rutas') }}">Rutas</a></li>#}
                  {#<li {% if 'encuestadores' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('encuestadores') }}">Encuestadores</a></li>#}
                  {#<li {% if 'estadossolicitud' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('estadossolicitud') }}">Estados de Solicitud</a></li>#}
                  {#<li {% if 'estadosruta' in app.request.attributes.get('_route') %}class="active"{% endif %} ><a href="{{ path('estadosruta') }}">Estados de Ruta</a></li>#}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                  <li><a href="../casa">Link</a></li>
                  {# <li><a href="../contacto">Contacto</a></li> #}
                </ul>
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </header>

        {% endblock %}

        {% block header %}
          <div class="page-header"></div>
        {% endblock %}

        <div class="container">
            <div class="row">
                {% block sidebar %}
                    <div class="col-md-12">
                        {% block body %}{% endblock %}
                    </div>
                {% endblock %}

            </div>
        </div>

        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/jquery.Rut.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}

    </body>
</html>
