{% block header %}
  <div class="page-header"></div>
{% endblock %}

{% block main %}
  <div class="container">
    <div class="row">
      {% block sidebar %}
        <div class="col-md-12">
          {% block body %}{% endblock %}
        </div>
      {% endblock %}
    </div>
  </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block javascript %}
  <script src="{{ asset('js/jquery.js') }}"></script>
