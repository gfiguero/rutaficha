{% use '::navigation.html.twig' with navigation as base_navigation %}

{% use '::header.html.twig' with header as base_header %}

{% use '::main.html.twig' with main as base_main %}

{% use '::footer.html.twig' with footer as base_footer %}

{% use '::javascript.html.twig' with javascript as base_javascript %}

{% block iexplorer %} {{ block('base_iexplorer') }} {% endblock %}

{% block stylesheet %} {{ block('base_stylesheet') }} {% endblock %}

{% block navigation %} {{ block('base_navigation') }} {% endblock %}

{% block header %} {{ block('base_header') }} {% endblock %}

{% block main %} {{ block('base_main') }} {% endblock %}

{% block footer %} {{ block('base_footer') }} {% endblock %}

