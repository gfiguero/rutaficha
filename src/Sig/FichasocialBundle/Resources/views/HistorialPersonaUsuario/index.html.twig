{% extends '::base.html.twig' %}

{% block title %}HistorialPersonaUsuario{% endblock %}

{% block body -%}
    <ol class="breadcrumb">
        <li><a href="{{ path('root') }}">Inicio</a></li>
        <li class="active">HistorialPersonaUsuario</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>HistorialPersonaUsuario</h1>
        </div>
        <div class="table-responsive">
            <table class="records_list table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Descripcion</th>
                        <th>Createdat</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr class='clickableRow' href="{{ path('historialpersonausuario_show', { 'id': entity.id }) }}">
                        <td>{{ entity.descripcion }}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y - HH:mm") }}{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="btn-group-lg pull-right">
        <a class="btn btn-primary" href="{{ path('historialpersonausuario_new') }}"><span class="glyphicon glyphicon-file"></span> Nuevo</a>
    </div>
{% endblock %}
