{% extends '::base.html.twig' %}

{% block title %}Archivo{% endblock %}

{% block body -%}
    <ol class="breadcrumb">
        <li><a href="{{ path('root') }}">Inicio</a></li>
        <li class="active">Archivos</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Archivo</h1>
        </div>
        <div class="table-responsive">
            <table class="records_list table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Fecha de Creaci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr class='clickableRow' href="{{ path('archivos_show', { 'id': entity.id }) }}">
                        <td>{{ entity.codigo }}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y - HH:mm") }}{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="btn-group-lg pull-right">
        <a class="btn btn-primary" href="{{ path('archivos_new') }}"><span class="glyphicon glyphicon-folder-open"></span> Nuevo archivo</a>
    </div>
{% endblock %}
